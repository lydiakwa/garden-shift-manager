<div class="h-full w-full">
  <h2 class="text-center text-lg font-semibold p-4">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "bg-[#D9D9D9] p-11 rounded-xl flex flex-col gap-y-2	", method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border-0 rounded w-full" %>
    </div>

    <div class="rounded p-2 bg-emerald-800 text-white w-fit self-end">
      <%= f.submit "Reset Password" %>
    </div>
  <% end %>
  <div class="flex underline justify-between pt-2 px-0.5">
    <%= render "devise/shared/links" %>
  </div>
</div>
