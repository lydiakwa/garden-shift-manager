
<div class="h-full w-full">
  <h2 class="text-center text-lg font-semibold p-4">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "bg-[#D9D9D9] p-11 rounded-xl flex flex-col	" }) do |f| %>
  <div class="pb-2">
    <%= f.label :email %><br>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border-0 rounded w-full" %>
  </div>

  <div class="pb-2">
    <%= f.label :password %><br>
    <%= f.password_field :password, autocomplete: "current-password", class: "border-0 rounded w-full" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="pb-2">
      <%= f.check_box :remember_me, class: "border-0 rounded pb-1" %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="rounded p-2 bg-emerald-800 w-fit self-end text-white">
    <%= f.submit "Log in" %>
  </div>
<% end %>
  <div class="flex underline justify-between pt-2">
    <%= render "devise/shared/links" %>
  </div>
</div>
