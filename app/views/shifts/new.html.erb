
  <div class="w-full h-full bg-neutral-100 rounded-xl">
    <h1 class="text-center text-lg font-semibold pt-4">Create a new shift</h1>
    <%= form_with class: "flex flex-col justify-between h-full w-full px-8 pt-10 pb-16 ", model: @shift do |form| %>
    <div class="flex flex-col gap-y-4">
      <div class="pb-2 flex flex-col">
          <%= form.label :title, "Title", class: "tracking-tight	" %>
          <%= form.text_field :title, class: "border-0 rounded w-full" %>
          <% if @shift.errors.include?(:title) %>
            <p class="text-red-600 text-sm indent-1 italic">
              <%= @shift.errors[:title].join(", ").capitalize %>
            </p>
          <% end %>
        </div>
        <div class="pb-2 flex flex-col">
          <%= form.label :start_date, "Start", class: "tracking-tight" %>
          <%= form.datetime_local_field :start_date, class: "border-0 rounded w-full" %>
          <% if @shift.errors.include?(:start_date) %>
            <p class="text-red-600 text-sm indent-1 italic">
              <%= @shift.errors[:start_date].join(", ").capitalize %>
            </p>
          <% end %>
        </div>
        <div class="pb-2 flex flex-col">
          <%= form.label :end_date, "End",  class: "tracking-tight" %>
          <%= form.datetime_local_field :end_date, class: "border-0 rounded w-full" %>
          <% if @shift.errors.include?(:end_date) %>
            <p class="text-red-600 text-sm indent-1 italic">
              <%= @shift.errors[:end_date].join(", ").capitalize %>
            </p>
          <% end %>
        </div>
      </div>
      <div class="w-full flex flex-row-reverse justify-between  text-white pb-4">
        <%= form.submit "Create", class: "rounded p-2 bg-emerald-800" %>
        <%= link_to "Cancel", shifts_path, class: "rounded p-2 bg-red-600" %>
      </div>
    <% end %>
  </div>

